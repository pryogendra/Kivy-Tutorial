<Button>
    font_size:32
    size_hint:(.3,.3)

<Root>
    FloatLayout:
        size:root.width,root.height
        Button:
            text:"Top Left"
            pos_hint:{"x":0,"top":1}
        Button:
            text:"Top Right"
            pos_hint:{'x':.7,'top':1}
        Button:
            text:"Center"
            pos_hint:{'x':0.35,'y':.35}
        Button:
            text:"Bottom Left"
            pos_hint:{'y':0,'x':0}
        Button:
            text:"Bottom Right"
            pos_hint:{'y':0,'x':0.7}
